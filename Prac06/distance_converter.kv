BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_distance
            text: '7'
            font_size: 30
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.2, 1.0
            Button:
                id: up_button
                text: "Up"
                on_press: app.handle_increment(1)
            Button:
                id: down_button
                text: "Down"
                on_press: app.handle_increment(-1)
#    Button:
